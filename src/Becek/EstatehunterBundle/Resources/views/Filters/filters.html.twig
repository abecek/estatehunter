                                        <td>
                                            {% if filter.dateLastSearch is null %}
                                                Brak
                                            {% else %}
                                                {{ filter.dateLastSearch|date("Y-m-d H:i:s") }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if filter.searches is not empty %}
                                                {{ dump(filter.searches) }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div>
                                                <input type="hidden" id="idHouseFilter" name="idHouseFilter" value="{{ filter.idHouseFilter }}">
                                                <button type="submit" id="form_submit" class="btn btn-primary btn-sm">Run!</button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </form>
                        </tbody>
                    </table>
                {%  endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="">
                {%  if groundFilters is not empty %}
                    <h3>Filtry działek</h3>
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Desc</th>
                                <th scope="col">Date Created</th>
                                <th scope="col">Date Last Search</th>
                                <th scope="col">Rezultaty</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <form name="groundFiltersForm" method="POST" action="{{ path('runFilterSearch') }}">
                                {% for filter in groundFilters %}
                                    <tr>
                                        <td>{{ filter.idGroundFilter }}</td>
                                        <td>{{ filter.title }}</td>
                                        <td>{{ filter.description }}</td>
