                                                <button type="submit" id="form_submit" class="btn btn-primary btn-sm">Run!</button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </form>
                        </tbody>
                    </table>
                {%  endif %}
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <div>
                    {%  if data is not null %}
                        {{ dump(data) }}
                    {%  endif %}
                </div>

            </div>
        </div>
    </div>
</div><!-- /.container -->


